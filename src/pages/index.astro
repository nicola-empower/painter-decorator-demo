---
import Layout from "../layouts/Layout.astro";
import TrustBar from "../components/TrustBar.jsx";
import Testimonials from "../components/Testimonials.jsx";
import FAQ from "../components/FAQ.jsx";
import FeatureSection from "../components/FeatureSection.jsx";
import ProcessFlow from "../components/ProcessFlow.jsx";
import {
	Brush,
	Wind,
	Home,
	Layers,
	Droplet,
	Palette,
	CheckCircle,
} from "lucide-react";

const serviceFeatures = [
	{
		title: "Kitchen & Furniture Spraying",
		desc: "Revitalize your kitchen. Airless spray technology for a factory-smooth finish on cabinets.",
		icon: Droplet,
	},
	{
		title: "Luxury Wallpaper",
		desc: "Meticulous pattern matching and hanging of high-end wallcoverings with invisible seams.",
		icon: Layers,
	},
	{
		title: "Period Restoration",
		desc: "Breathable lime paints for heritage properties and sash window restoration.",
		icon: Home,
	},
];
---

<Layout title="Chroma Decor | Flawless Interior Finishes">
	<main class="relative isolate overflow-hidden bg-white">
		<!-- Hero Section -->
		<div class="relative h-screen w-full overflow-hidden">
			<img
				src="/hero.png"
				alt="Pristine painted interior"
				class="absolute inset-0 -z-10 h-full w-full object-cover object-center brightness-[0.9]"
			/>
			<div class="absolute inset-0 bg-white/30 backdrop-blur-[2px] -z-10">
			</div>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 h-full flex flex-col justify-center relative z-10"
			>
				<div class="max-w-3xl animate-fade-in-up">
					<div class="hidden sm:mb-8 sm:flex">
						<div
							class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-600 ring-1 ring-gray-900/10 hover:ring-gray-900/20 transition-all uppercase tracking-wide font-semibold bg-white/50 backdrop-blur-md"
						>
							100% Dust Free Technology
						</div>
					</div>
					<h1
						class="text-4xl font-header font-bold tracking-tight text-white sm:text-7xl mb-6 drop-shadow-md italic"
					>
						Curators of <br />
						<span class="text-purple-300">Colour.</span>
					</h1>
					<p
						class="mt-6 text-xl leading-8 text-purple-50 drop-shadow-sm max-w-2xl font-body"
					>
						Bespoke interiors for discerning clients. We specialize
						in heritage restoration, luxury wallpaper hanging, and
						dust-free sanding technology.
					</p>
					<div class="mt-10 flex flex-wrap items-center gap-6">
						<a
							href="/quote"
							class="rounded-full bg-accent px-8 py-3.5 text-lg font-semibold text-white shadow-lg hover:bg-accent/90 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent transition-all duration-300 scale-100 hover:scale-105"
						>
							Get a Free Quote
						</a>
						<a
							href="/portfolio"
							class="rounded-full bg-white/80 backdrop-blur-sm border border-gray-200 px-8 py-3.5 text-lg font-semibold text-gray-900 hover:bg-white transition-all duration-300"
						>
							View Recent Projects <span aria-hidden="true"
								>→</span
							>
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- TrustBar -->
		<div class="relative z-20 bg-white">
			<TrustBar client:visible />
		</div>

		<!-- Services Section -->
		<FeatureSection
			client:visible
			title="Interior & Exterior Excellence"
			subtitle="Our Expertise"
			description="We don't just paint walls; we enhance properties. From spraying bespoke joinery to hanging delicate papers, our focus is on the details you can see and feel."
			features={serviceFeatures}
			imageSrc="/hero.png"
			align="right"
			quote={null}
			author={null}
		/>

		<!-- Quote Assistant Feature -->
		<div class="py-24 bg-blue-50 relative overflow-hidden">
			<!-- Decorative blob -->
			<div
				class="absolute -top-24 -left-24 w-96 h-96 bg-blue-200 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob"
			>
			</div>
			<div
				class="absolute -bottom-24 -right-24 w-96 h-96 bg-purple-200 rounded-full mix-blend-multiply filter blur-3xl opacity-70 animate-blob animation-delay-2000"
			>
			</div>

			<div
				class="mx-auto max-w-7xl px-6 lg:px-8 relative z-10 text-center"
			>
				<h2
					class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl font-serif mb-6"
				>
					Plan Your Project in 2 Minutes
				</h2>
				<p
					class="mx-auto max-w-2xl text-lg leading-8 text-gray-600 mb-10"
				>
					Avoid the back-and-forth. Tell us about your space—whether
					it’s a single room, kitchen cabinets, or the full
					property—and get a detailed estimate fast.
				</p>

				<div
					class="bg-white rounded-2xl shadow-xl p-8 max-w-3xl mx-auto border border-blue-100"
				>
					<div
						class="flex flex-col sm:flex-row gap-6 items-center justify-center"
					>
						<div class="flex items-center gap-3">
							<div
								class="bg-blue-100 p-2 rounded-full text-blue-600"
							>
								<CheckCircle size={20} />
							</div>
							<span class="font-medium text-gray-700"
								>Detailed Breakdown</span
							>
						</div>
						<div class="flex items-center gap-3">
							<div
								class="bg-blue-100 p-2 rounded-full text-blue-600"
							>
								<CheckCircle size={20} />
							</div>
							<span class="font-medium text-gray-700"
								>No Hidden Costs</span
							>
						</div>
						<div class="flex items-center gap-3">
							<div
								class="bg-blue-100 p-2 rounded-full text-blue-600"
							>
								<CheckCircle size={20} />
							</div>
							<span class="font-medium text-gray-700"
								>Fast Turnaround</span
							>
						</div>
					</div>
					<div class="mt-10">
						<a
							href="/quote"
							class="inline-block rounded-full bg-blue-600 px-8 py-3.5 text-lg font-bold text-white shadow-lg hover:bg-blue-500 transition-all duration-300 transform hover:-translate-y-1"
						>
							Start Your Quote &rarr;
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Process Section -->
		<ProcessFlow
			client:load
			title="Our Process"
			subtitle="Perfection takes time"
			steps={[
				{
					title: "Consultation",
					desc: "We discuss colour, finish, and schedule.",
				},
				{
					title: "Preparation",
					desc: "Extensive masking and dust-free sanding.",
				},
				{
					title: "Application",
					desc: "Flawless application of premium paints.",
				},
				{
					title: "Review",
					desc: "Walkthrough to ensure total satisfaction.",
				},
			]}
		/>

		<!-- Recent Work Section -->
		<div class="bg-white py-24 sm:py-32">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center mb-16">
					<h2
						class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl font-serif"
					>
						Recent Work
					</h2>
					<p class="mt-4 text-lg text-gray-600">
						Our latest interior finishing projects.
					</p>
				</div>
				<div class="mx-auto max-w-4xl">
					<img
						src="/painter.png"
						alt="Recent painting project"
						class="w-full rounded-2xl shadow-xl ring-1 ring-gray-900/10 object-cover aspect-video"
					/>
				</div>
			</div>
		</div>

		<Testimonials
			client:visible
			reviews={[
				{
					text: "The transformation of our hallway is incredible. But what impressed me most was the dust-free sanding. I was dreading the cleanup, but there wasn't any!",
					author: "James & Sarah",
					location: "Gosforth",
					role: "Heritage Restoration",
					rating: 5,
				},
				{
					text: "I was going to buy a new kitchen, but Chroma Decor sprayed my old oak cabinets in a dark navy. It looks like a £20,000 showroom kitchen. Stunning.",
					author: "Helen R.",
					location: "Durham",
					role: "Kitchen Transformation",
					rating: 5,
				},
				{
					text: "Immaculate finish and respectful of our home. The team worked quietly and left everything spotless every evening.",
					author: "David M.",
					location: "Jesmond",
					role: "Interior Decorating",
					rating: 5,
				},
			]}
		/>

		<!-- CTA Section -->
		<div class="bg-gray-900 py-16 sm:py-24" id="contact">
			<div class="mx-auto max-w-7xl px-6 lg:px-8">
				<div class="mx-auto max-w-2xl text-center">
					<h2
						class="text-3xl font-bold tracking-tight text-white sm:text-4xl font-serif"
					>
						Ready to Transform Your Home?
					</h2>
					<p
						class="mx-auto mt-6 max-w-xl text-lg leading-8 text-gray-300"
					>
						Whether it's a kitchen respray or a full period property
						restoration, we are ready to bring your vision to life.
					</p>
					<div class="mt-10 flex justify-center gap-x-6">
						<a
							href="/quote"
							class="rounded-full bg-white px-8 py-3.5 text-lg font-semibold text-gray-900 shadow-lg hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white transition-all"
							>Get Your Estimate</a
						>
					</div>
				</div>
			</div>
		</div>

		<FAQ client:visible />
	</main>
</Layout>
